<odoo>
    <!-- Vista tree-->
    <record id="supplier_view_tree" model="ir.ui.view">
        <field name="name">pharma.supplier.tree</field>
        <field name="model">pharma.supplier</field>
        <field name="arch" type="xml">
            <tree string="Fornecedor">
                <field name="name"/>
                <field name="nif"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="address"/>
            </tree>
        </field>
    </record>

    <!-- Vista form -->
    <record id="supplier_views_form" model="ir.ui.view">
        <field name="name">pharma.supplier.form</field>
        <field name="model">pharma.supplier</field>
        <field name="arch" type="xml">
            <form string="Produtos">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="nif"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="address"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Vista de uma acção-->
    <record id="action_supplier" model="ir.actions.act_window">
        <field name="name">Fornecedores</field>
        <field name="res_model">pharma.supplier</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--menu-->
    <menuitem id="menu_supplier_root" name="Fornecedor"/>
    <menuitem id="menu_supplier" name="Fornecedor" parent="menu_supplier_root" action="action_supplier"/>

</odoo>