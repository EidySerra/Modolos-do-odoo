<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Modelo, Vista de Formulario-->
        <record id="olualinet_training_view_form" model="ir.ui.view">
            <field name="name">olualinet.training.form</field>
            <field name="model">olualinet.training</field>
            <field name="arch" type="xml">
                <form string="Trainamento Olualinet">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="category"/>
                                <field name="telephone"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="price"/>
                                <field name="estado"/>
                                <field name="genero"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--Fim vista form-->
        <!--Modelo, de vista tree-->
        <record id="olualinet_training_view_tree" model="ir.ui.view">
            <field name="name">olualinet.training.tree</field>
            <field name="model">olualinet.training</field>
            <field name="arch" type="xml">
                <tree string="Trainamento Olualinet">
                    <field name="name"/>
                    <field name="category"/>
                    <field name="telephone"/>
                    <field name="price"/>
                    <field name="estado"/>
                    <field name="genero"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>
        <!--Fim vista tree-->
        <!--Modelo de vista search-->
        <record id="olualinet_training_view_search" model="ir.ui.view">
            <field name="name">olualinet.training.search</field>
            <field name="model">olualinet.training</field>
            <field name="arch" type="xml">
                <search string="Pesquisa">
                    <field name="category" string="category"/>
                    <field name="genero" string="genero"/>

                    <!--Filtros personalizados-->
                    <filter string="Ativo" name="filter_active" domain="[('estado','=',True)]"/>
                    <filter string="Genero" name="filter_male" domain="[('genero','=','male')]"/>

                    <!-- Agrupamentos-->
                    <group expand="1" string="Agrupar Por">
                        <filter string="Categoria" name="group_category" context="{'group_by':'category'}"/>
                        <filter string="Genero" name="group_male" context="{'group_by':'genero'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!--Fim search-->

        <!--Modelo, de Vista kanban-->
        <record id="olualinet_training_view_kanban" model="ir.ui.view">
            <field name="name">olualinet.training.kanban</field>
            <field name="model">olualinet.training</field>
            <field name="arch" type="xml">
                <kanban classe="o_kanban_small_column" create="true">
                    <field name="name"/>
                    <field name="category"/>
                    <field name="telephone"/>
                    <field name="price"/>
                    <field name="estado"/>
                    <field name="genero"/>
                    <field name="date"/>
                    <tampletes>
                        <t t-name="kanban_view">
                            <div classe="">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <br/>
                                <span>
                                    <field name="category"/>
                                </span>
                                <span>
                                    <field name="telephone"/>
                                </span>
                                <span>Preço
                                    <field name="price"/>
                                </span>
                                <span>Estado
                                    <field name="estado"/>
                                </span>
                                <span>
                                    <field name="genero"/>
                                </span>
                                <span>
                                    <field name="date"/>
                                </span>
                            </div>
                        </t>
                    </tampletes>
                </kanban>
            </field>
        </record>


