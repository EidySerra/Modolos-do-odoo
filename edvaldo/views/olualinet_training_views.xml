        <!--Modelo, registro de uma acção-->
        <record id="action_olualinet_training" model="ir.actions.act_window">
            <field name="name">Olualinet Treinamento</field>
            <field name="res_model">olualinet.training</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

        <menuitem id="main_olualinet_menu" name="Olualinet" sequence="0"
                  web_icon="edvaldo,static/description/icon.png"/>
        <menuitem id="menu_olualinet_training" name="Treinamento" parent="main_olualinet_menu"
                  action="action_olualinet_training" sequence="1"/>
    </data>
