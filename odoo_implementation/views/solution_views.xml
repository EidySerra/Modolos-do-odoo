<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista tree -->
    <record id="view_solution_tree" model="ir.ui.view">
        <field name="name">odoo.implementation.solution.tree</field>
        <field name="model">odoo.implementation.solution</field>
        <field name="arch" type="xml">
            <tree string="Solu√ß√µes">
                <field name="name"/>
                <field name="tipo"/>
                <field name="category"/>
            </tree>
        </field>
    </record>

    <!-- Vista kanban -->
    <record id="view_solution_kanban" model="ir.ui.view">
        <field name="name">odoo.implementation.solution.kanban</field>
        <field name="model">odoo.implementation.solution</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_example" create="true" quick_create="false">
                <field name="name"/>
                <field name="tipo"/>
                <field name="category"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_card">
                            <strong><field name="name"/></strong><br/>
                            <span>‚öôÔ∏è Tipo: <field name="tipo"/></span><br/>
                            <span>üìÇ Categoria: <field name="category"/></span>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="view_solution_form" model="ir.ui.view">
        <field name="name">odoo.implementation.solution.form</field>
        <field name="model">odoo.implementation.solution</field>
        <field name="arch" type="xml">
            <form string="Solu√ß√£o">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="tipo"/>
                        <field name="category"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Search -->
    <record id="view_solution_search" model="ir.ui.view">
        <field name="name">odoo.implementation.solution.search</field>
        <field name="model">odoo.implementation.solution</field>
        <field name="arch" type="xml">
            <search string="Pesquisar Solu√ß√£o">
                <field name="name" string="Nome"/>
                <field name="tipo" string="Tipo"/>
                <field name="category" string="Categoria"/>
            </search>
        </field>
    </record>

    <!-- Modelo de registro de uma ac√ß√£o -->
    <record id="action_solution" model="ir.actions.act_window">
        <field name="name">Solu√ß√µes</field>
        <field name="res_model">odoo.implementation.solution</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_solution" name="Solu√ß√µes" parent="menu_root" action="action_solution"/>
</odoo>
