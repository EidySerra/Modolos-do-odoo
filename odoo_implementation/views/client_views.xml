<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista tree-->
    <record id="view_client_tree" model="ir.ui.view">
        <field name="name">odoo.implementation.client.tree</field>
        <field name="model">odoo.implementation.client</field>
        <field name="arch" type="xml">
            <tree string="Clientes">
                <field name="name"/>
                <field name="tel"/>
                <field name="email"/>
                <field name="nif"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="view_client_kanban" model="ir.ui.view">
        <field name="name">odoo.implementation.client.kanban</field>
        <field name="model">odoo.implementation.client</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_example" create="true" quick_create="false">
                <field name="name"/>
                <field name="tel"/>
                <field name="email"/>
                <field name="nif"/>
                <field name="code"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_card">
                            <strong>
                                <field name="name"/>
                            </strong>
                            <br/>
                            <span>ðŸ“ž
                                <field name="tel"/>
                            </span>
                            <br/>
                            <span>ðŸ“§
                                <field name="email"/>
                            </span>
                            <br/>
                            <span>ðŸ†”
                                <field name="nif"/>
                            </span>
                            <br/>
                            <span>ðŸ”¢ CÃ³digo:
                                <field name="code"/>
                            </span>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista form -->
    <record id="view_client_form" model="ir.ui.view">
        <field name="name">odoo.implementation.client.form</field>
        <field name="model">odoo.implementation.client</field>
        <field name="arch" type="xml">
            <form string="Cliente">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="tel"/>
                        <field name="email"/>
                        <field name="nif"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Search -->
    <record id="view_client_search" model="ir.ui.view">
        <field name="name">odoo.implementation.client.search</field>
        <field name="model">odoo.implementation.client</field>
        <field name="arch" type="xml">
            <search string="Pesquisar Cliente">
                <field name="name" string="Nome"/>
                <field name="tel" string="Telefone"/>
                <field name="email" string="Email"/>
                <field name="nif" string="NIF"/>
                <field name="code" string="CÃ³digo"/>
            </search>
            <!--filtros de pesquisas-->
            <filter string="Com Telefone" name="filter_with_phone" domain="[('tel','!=',False)]"/>
            <filter string="Sem Telefone" name="filter_without_phone" domain="[('tel','=',False)]"/>

            <!--Agrupamento-->
            <group expand="1" string="Agrupar por...">
                <filter string="Email" name="group_email" context="{'group:by':'email'}"/>
                <filter string="Nif" name="group_nif" context="{'group:by':'nif'}"/>
            </group>
        </field>
    </record>

    <!-- vista de Modelo de acÃ§Ã£o-->
    <record id="action_client" model="ir.actions.act_window">
        <field name="name">Clientes</field>
        <field name="res_model">odoo.implementation.client</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <!-- Menu de cima-->
    <menuitem id="menu_root" name="implementaÃ§Ã£o odoo"/>
    <menuitem id="menu_client" name="Clientes" parent="menu_root" action="action_client"/>
</odoo>
